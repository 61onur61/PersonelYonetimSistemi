@model PersonelYonetimSistemi.Common.VModels.PersonelIzinOnayVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div style="text-align:center" class="alert alert-primary" role="alert">
        Personel İzin Talebini Güncelleyin...
    </div>
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="Create">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.OnayDurumu)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IzinTipiMetin">İzin Tipi</label>
                @*<input asp-for="PersonelIzinTipiId" type="text" class="form-control" id="exampleInputEmail1" placeholder="İzin Tipi" aria-describedby="emailHelp">*@
                @Html.DropDownListFor(i => i.PersonelIzinTipiId, new SelectList(ViewBag.PersonelIzinTipleri, "Id", "Ad"), "İzin Tipi Seçiniz", new { @class = "form-control" })
                <span asp-validation-for="PersonelIzinTipiId"></span>
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="form-group">
                <label asp-for="IzinBaslangicTarihi">Başlangıç Tarihi</label>
                <div class="input-group">
                    <input asp-for="IzinBaslangicTarihi" type='text' class="form-control example" data-date-format="dd-mm-yyyy" />
                    <span class="input-group-addon">
                        <span class="form-control"><i class="fas fa-calendar-alt"></i></span>
                    </span>
                </div>
                <span asp-validation-for="IzinBaslangicTarihi"></span>
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="form-group">
                <label asp-for="IzinBitisTarihi">Bitiş Tarihi</label>
                <div class="input-group">
                    <input asp-for="IzinBitisTarihi" type='text' class="form-control example" data-date-format="dd-mm-yyyy" />
                    <span class="input-group-addon">
                        <span class="form-control"><i class="fas fa-calendar-alt"></i></span>
                    </span>
                </div>
                <span asp-validation-for="IzinBitisTarihi"></span>
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="form-group">
                <label asp-for="IzinNotu">İzin Talep Açıklaması</label>
                <div class="input-group">
                    <textarea asp-for="IzinNotu" class="form-control limited" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <span asp-validation-for="IzinNotu"></span>
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <button style="background-color:#4e73df" type="submit" id="btnCreate" class="btn btn-primary col-xl-3 mt-3">Onaya Gönder</button>
        </form>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous"></script>
    <script src="~/js/jquery.inputlimiter.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.example').datepicker({
                dateFormat: "dd/mm/yyyy",
                autoclose: true,
                todayHighlight: true
            });
            $('textarea.limited').inputlimiter({
                remText: '%n Karakter Kaldı...',
                limitText: 'En Fazla %n Karakter Kullanılabilir.'
            });
        });


    </script>
</body>


</html>


