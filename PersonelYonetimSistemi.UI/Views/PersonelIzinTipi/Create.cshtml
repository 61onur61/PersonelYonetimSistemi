@model PersonelYonetimSistemi.Common.VModels.PersonelIzinTipiVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div style="text-align:center" class="alert alert-primary" role="alert">
    Personel İzin Tipi Oluşturun...
</div>
<div class="col-md-6">
    <form class="form-horizontal" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Ad">İzin Tipi</label>
            <input asp-for="Ad" type="text" class="form-control" id="exampleInputEmail1" placeholder="İzin Tipi" aria-describedby="emailHelp">
            <span asp-validation-for="Ad"></span>
            @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
        </div>
        <div class="form-group">
            <label asp-for="GunSayisi">Gün Sayısı</label>
            <input asp-for="GunSayisi" type="text" class="form-control" id="exampleInputEmail1" min="0" placeholder="Gün Sayısı" aria-describedby="emailHelp">
            <span asp-validation-for="GunSayisi"></span>
            @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
        </div>
        <button type="submit" id="btnCreate" class="btn btn-primary col-xl-3">Kaydet</button>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
